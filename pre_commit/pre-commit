#!/usr/bin/env bash
# File generated by pre-commit: https://pre-commit.com
# ID: 138fd403333d3ddd5efb44317e38bf03

# start templated
INSTALL_PYTHON='c:\program files\python36\python.exe'
ARGS=(hook-impl --config=.config/.pre-commit-config.yaml --hook-type=pre-commit)
# end templated

#ret=`which Python`
#echo  $ret
pip install -r .config/requirements_bcg.txt
HERE="$(cd "$(dirname "$0")" && pwd)"
ARGS+=(--hook-dir "$HERE" -- "$@")

cp ./.config/.clang-format  ./ -rf
echo `pwd`
sleep 1

python -mpre_commit "${ARGS[@]}"
RET=$?
echo "after check format result="$?
rm .clang-format -rf
exit $RET
